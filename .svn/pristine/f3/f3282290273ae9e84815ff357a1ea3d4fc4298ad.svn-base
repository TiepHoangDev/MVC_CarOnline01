@model IMIC.BUSINESSOBJECTS.EntityObject.MadeInCar_Object

@{
    ViewBag.Title = "Thêm mới Xuất Xứ Dòng Xe";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="portlet-body">
    @using (Html.BeginForm("MadeInCar_Insert", "MadeInCar", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thêm Mới Xuất Xứ Các Dòng Xe</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })            

            <div class="form-group">
                @Html.Label("Tên Xuất Xứ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MadeInName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MadeInName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-default green-haze" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Về trang Quản Lý Xuất Xứ Xe", "Manage_MadeInCar")
    </div>
</div>