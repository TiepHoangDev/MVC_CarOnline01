@model IEnumerable<IMIC.BUSINESSOBJECTS.EntityObject.AccountObject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




@section script_footer
{

    <script src="~/Areas/Admin/Content/assets/global/scripts/customer_design.js"></script>
    <script>
        $('.btn-delete').click(function () {
            var id = $(this).data('id');
            action.deleteObject(id, '@Url.Action("Delete", "Account")');
        });
        TableAdvanced.init();
    </script>

}


<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet box green-haze">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-globe"></i>Quản lý Danh sách các thành viên
        </div>
        <div class="tools">
            <a href="javascript:;" class="reload">
            </a>
            <a href="javascript:;" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <div style="padding-bottom:10px;">
            <a class="btn btn-primary btn-sm green-haze" style="margin-top:10px;" href="@Url.Action("Create", "Account")">
                Thêm mới
                <span class="fa fa-plus" style="padding-left:6px;"></span>
            </a>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_2">
            <thead>
                <tr>
                    <th>Họ và tên</th>
                    <th>Chức vụ</th>
                    <th>Số điện thoại</th>
                    <th>Tài khoản</th>
                    <th>Avatar</th>
                    <th>Comment</th>
                    <th>Flow</th>
                    <th>Like</th>
                    <th>Post</th>
                    <th>Kích hoạt</th>
                    <th style="width: 210px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleObj.RoleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            <img src="@item.Avatar" width="100" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfComment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfFlow)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfLikeProfile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfPost)
                        </td>
                        <td>
                            @(item.Active ? "Đã kích hoạt" : "Đã khóa tài khoản")
                        </td>
                        <td>
                            <a href="@Url.Action("Update", "Account",new {@id=@item.AccountID })" class="btn btn-default btn-info">Edit</a>

                            <a href="javascript:void(0)" class="btn btn-danger btn-delete" data-id="@item.AccountID" data-name="@item.FullName">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
