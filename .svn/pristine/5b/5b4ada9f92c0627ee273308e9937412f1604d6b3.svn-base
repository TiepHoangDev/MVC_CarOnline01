@model IEnumerable<IMIC.BUSINESSOBJECTS.EntityObject.NumberOfDoor_Object>

@{
    ViewBag.Title = "Quản Lý Số Cửa Xe";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section script_footer
{

    <script src="~/Areas/Admin/Content/assets/global/scripts/customer_design.js"></script>
    <script>
        $('.btn-delete').click(function() {
            var id = $(this).data('id');
            action.deleteObject(id, '@Url.Action("NumberOfDoor_Delete", "NumberOfDoor")');
        });
        TableAdvanced.init();
    </script>

}


<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet box green-haze">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-globe"></i>Quản Lý Số Cửa Của Xe
        </div>
        <div class="tools">
            <a href="javascript:;" class="reload">
            </a>
            <a href="javascript:;" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <div style="padding-bottom:10px;">
            <a class="btn btn-primary btn-sm green-haze" style="margin-top:10px;" href="@Url.Action("NumberOfDoor_Insert", "NumberOfDoor")">
                Thêm mới
                <span class="fa fa-plus" style="padding-left:6px;"></span>
            </a>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_2">
            <thead>
                <tr>
                    <th>
                        Tên Số Cửa Của Xe
                    </th>
                    <th style="width: 210px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfDoorName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "NumberOfDoor_Update", new { id = @item.NumberOfDoorId }, new { @class = "btn btn-info" })

                            <a href="javascript:void(0)" class="btn btn-danger btn-delete" data-id="@item.NumberOfDoorId" data-name="@item.NumberOfDoorName">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
