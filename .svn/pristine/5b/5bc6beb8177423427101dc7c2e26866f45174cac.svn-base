@model IMIC.BUSINESSOBJECTS.EntityObject.Comment_Object

@{
    Layout = null;
    var carCode = (long)ViewBag.carCode;
}
<style>
    .share-tip {
        width: 1000px;
        height: 530px;
        left: 171px;
        color: #000000;
        border-radius: 4px;
        box-shadow: 1px 2px 2px rgba(12, 13, 14, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.3);
        overflow: auto;
        z-index: 100;
        position: fixed;
        font-size: 11px;
        border: 1px solid #0077cc;
        background-color: #FFFFFF;
        display: none;
        bottom: 10%;
    }

    .btn-dlg-close-x {
        background: url('../../Content/img/arrow-top.png');
        width: 25px;
        height: 29px;
        display: block;
        position: absolute;
        top: -15px;
        right: -16px;
        cursor: pointer;
        opacity: 1;
        z-index: 9999;
    }
</style>


<div class="share-tip fd-dlg dlg-write-review" style="margin: 0px; padding: 0px">
    <div class="title" style="width: 1000px">
        <div class="res-name">
            Viết bình luận:
        </div>
    </div>

    <div class="btn-dlg-close-x"></div>
    <div class="fdlg-body">
        <div class="fldg-left">
            @{
                Html.RenderAction("PartialCarInfo", "CarDetail", new { carCode = @carCode });
            }

        </div>
        <div class="fldg-right">
            @using (Html.BeginForm("PartialCreateCommnet", "CarDetail", new { carCode = carCode }))
            {
                <div class="form-group">
                    @Html.EditorFor(model => model.PostId, new { htmlAttributes = new { @class = "form-control hidden" } })
                </div>

                <div class="form-group">
                    @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control hidden" } })
                </div>
                <div class="content">
                    <div>
                        <div class="ht-input"></div>
                        <div class="c-preview">

                            <div style="height: 240px">

                                @Html.TextAreaFor(model => model.ContentComment,
                                new
                                {
                                    @class = "dwr-tooltip tooltipstered",
                                    @placeholder = "Nhập nội dung bình luận",
                                    @style = "max-height: 240px; resize: none; height: 40px;"
                                })
                            </div>

                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control hidden" } })
                </div>

                <div class="tabs-content">
                    <input type="submit" class="btn-submit dwr-tooltip tooltipstered" value="Hoàn tất" />


                </div>
            }



        </div>
    </div>
</div>
