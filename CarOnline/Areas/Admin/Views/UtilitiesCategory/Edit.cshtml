@model IMIC.BUSINESSOBJECTS.EntityObject.UtilitiesCategory_Object

@{
    ViewBag.Title = "Cập nhật Danh mục tiện ích";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="portlet-body">
    @using (Html.BeginForm("Edit", "UtilitiesCategory", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Tiện nghi</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group hidden">
                @Html.Label("Mã tiện nghi", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UtilitiesCategoryId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UtilitiesCategoryId, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.Label("Tên tiện nghi", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UtilitiesCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UtilitiesCategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cập nhật" class="btn btn-default green-haze" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Về trang Danh mục tiện ích", "Index")
    </div>
</div>