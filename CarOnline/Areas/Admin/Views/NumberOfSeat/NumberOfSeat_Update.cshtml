@model IMIC.BUSINESSOBJECTS.EntityObject.NumberOfSeat_Object

@{
    ViewBag.Title = "Cập Nhật Số Chỗ Ngồi Của Xe";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="portlet-body">
    @using (Html.BeginForm("NumberOfSeat_Update", "NumberOfSeat", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cập Nhật Số Chỗ Ngồi Của Xe</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group hidden">
                @Html.Label("Mã Số Chỗ Ngồi", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberOfSeatId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberOfSeatId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tên Số Chỗ Ngồi", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberOfSeatName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberOfSeatName, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cập nhật" class="btn btn-default green-haze" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Về trang Manage_NumberOfSeat", "Manage_NumberOfSeat")
    </div>
</div>



