@model IEnumerable<IMIC.BUSINESSOBJECTS.EntityObject.DigitalCategory_Object>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section script_footer
{

    <script src="~/Areas/Admin/Content/assets/global/scripts/customer_design.js"></script>
    <script>
        $('.btn-delete').click(function() {
            var id = $(this).data('id');
            action.deleteObject(id, '@Url.Action("Delete", "DigitalCategory")');
        });
        TableAdvanced.init();
    </script>

}


<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet box green-haze">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-globe"></i>Quản lý Danh mục Thông số kĩ thuật
        </div>
        <div class="tools">
            <a href="javascript:;" class="reload">
            </a>
            <a href="javascript:;" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <div style="padding-bottom:10px;">
            <a class="btn btn-primary btn-sm green-haze" style="margin-top:10px;" href="@Url.Action("Create", "DigitalCategory")">
                Thêm mới
                <span class="fa fa-plus" style="padding-left:6px;"></span>
            </a>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_2">
            <thead>
                <tr>
                    <th>
                        Mã thông số kĩ thuật
                    </th>
                    <th>
                        Tên thông số kĩ thuật
                    </th>
                    <th style="width: 210px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DigitalCategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DigitalCategoryName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = @item.DigitalCategoryId }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Details", "Details", new { id = @item.DigitalCategoryId }, new { @class = "btn btn-info" })
                            <a href="javascript:void(0)" class="btn btn-danger btn-delete" data-id="@item.DigitalCategoryId" data-name="@item.DigitalCategoryName">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
